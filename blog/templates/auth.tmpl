{{define "content"}}
<div class="admin-title">ADMIN AUTHORIZATION</div>
<form class="post-form auth-form" autocomplete="off" action="{{ getURL "auth" }}" method="post">
    <div class="field">
        <div class="label">Login:</div>
        <input type="text" name="login" class="login" required/>
    </div>
    <div class="field">
        <div class="label">Password:</div>
        <input type="password" name="password" required/>
    </div>

    <input type="submit" value="SIGN IN" class="submit-form">
</form>
{{end}}
